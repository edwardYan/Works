    <script>
var data = [
{name:'小美', src:'img/0.JPG', phone:[['北京移动','12346779'], ['北京联通','44346779']], alipay:'35665466', net:[['QQ','32346779'], ['电子邮件','44346779@qq.com']]}
, {name:'小红', src:'img/1.JPG',  phone:[['北京移动','12346779'], ['北京联通','44346779']]}, 
{name:'小明', src:'img/3.JPG',phone:[['北京移动','12346779'], ['北京联通','44346779']]}
, {name:'小张', src:'img/4.JPG'}, {name:'大李',  phone:[['北京移动','12346779'], ['北京联通','44346779']]}
];
  
window.onload = function(){
    var oBox1 = document.getElementById('box1');
    var oBox2 = document.getElementById('box2');
    var oBox3 = document.getElementById('box3');
    var oUl = document.getElementById('list');
    var oName = document.getElementById('name');
    var oUl2 = document.getElementById('list1');
    var aI = oUl2.getElementsByTagName('i');
    var aLi = oUl.getElementsByTagName('li');
    var msg_name = document.getElementById('msg_name');
    var aSpan = document.getElementById('send').getElementsByTagName('span');
    var str = '';
    var oSpan = document.getElementById('num');
    var num = 0;

    oSpan.innerHTML = data.length;
    for(var i=0; i<data.length; i++){
        if(data[i].src)
            str += '<li><img src='+data[i].src+' alt="">'+data[i].name+'</li>';
        else{
            str += '<li><span>'+data[i].name[0]+'</span>'+data[i].name+'</li>';
        }
    }
    oUl.innerHTML = str;
    //点击弹出详细信息
    for(var i=0; i<aLi.length; i++){
        aLi[i].index = i;
        aLi[i].onclick = function(){
            startMove(oBox2, 'left', 0, 30);
            num = 1;
            if(data[this.index].src)
                oName.innerHTML = '<img src='+data[this.index].src+' alt="">'+data[this.index].name;
            else{
                oName.innerHTML = '<span>'+data[this.index].name[0]+'</span>'+data[this.index].name;
            }
            var str = '';
            if(data[this.index].phone){
                for(var i=0; i<data[this.index].phone.length; i++){
                    str += '<li><p class="fl"><span>'+data[this.index].phone[i][1]+'</span><span class="jt"><em>手机</em>'+data[this.index].phone[i][0]+'</span></p> <i class="fr"><img src="img/msg.png" height="32" width="35" alt=""></i></li>'
                }
            }
            if(data[this.index].alipay){
                str+='<li><span>支付宝转账</span><span class="jt">'+data[this.index].alipay+'</span></li>'
            }
           
            if(data[this.index].net){
                 str +='<li>';
                for(var i=0; i<data[this.index].net.length; i++){
                    str += '<p class="fl w_100"><span>'+data[this.index].net[i][0]+'</span><span class="jt">'+data[this.index].net[i][1]+'</span></p>'
                }
                str += '</li>';  
            }   
                   
            oUl2.innerHTML = str;
            //点击弹出发送信息层
            var _this = this;
            for(var i=0; i<aI.length; i++){
                aI[i].index = i;
                aI[i].onclick = function(){
                    aSpan[0].on = false;
                    oCont.innerHTML = '';
                    input.value = '短信/彩信';
                    input.style.color = '#C0C0C0';
                    startMove(oBox3, 'left', 0, 30);
                    num = 2;
                    if(data[_this.index].src)
                        msg_name.innerHTML = '<img src='+data[_this.index].src+' alt=""><p><span>'+data[_this.index].name+'</span><span>'+data[_this.index].phone[this.index][1]+'</span></p>';
                    else{
                        msg_name.innerHTML = '<em class="fl pink">'+data[_this.index].name[0]+'</em><p><span>'+data[_this.index].name+'</span><span>'+data[_this.index].phone[this.index][1]+'</span></p>';
                    }
                    
                };
            }
        };        
    }
    //点击发送短信
    var oCont = document.getElementById('cont');
    var input = aSpan[0].getElementsByTagName('input')[0];
    aSpan[0].onclick = function(){
        input.value = '';
        this.on = true;
        input.style.color = '#000';
    };
    
    aSpan[1].onclick = function(){
        if(input.value.trim() && aSpan[0].on){
            var sTime = new Date().getFullYear()+'年'+(new Date().getMonth()+1)+'月'+new Date().getDate()+'日'+new Date().getHours()+'时'+new Date().getMinutes()+'分';
            oCont.innerHTML += '<p><em>'+sTime+'</em><span>'+input.value+'</span></p>';
            input.value = '';
        }else{
            alert('请输入');
        }
        
    };
    //点击返回
    var arr = [oBox1, oBox2, oBox3];
    var oRtn = document.getElementById('return');
    oRtn.onclick = function(){
       
        if(num <= 0)
            num = 0;
        else{
            startMove(arr[Math.abs(num)], 'left', 240, 30);
        }
        num--;
    };
};
 
function startMove(obj, attr, target, step){
    var currentStyle = parseFloat(getStyle(obj, attr));
    var oTimer = null;
    target>currentStyle ? step=step : step = -step;

    oTimer = setInterval(function(){
        currentStyle += step;
        if(step<0&&currentStyle<=target || step>0&&currentStyle>=target){
            currentStyle = target;
            clearInterval(oTimer);
        }
        obj.style[attr] = currentStyle + 'px';
    }, 100);

}
function getStyle(obj, attr){
    return obj.currentStyle ? obj.currentStyle[attr]:getComputedStyle(obj)[attr];
}   
</script>
